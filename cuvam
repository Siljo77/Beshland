@app.route('/form', methods=["POST"])
def form():
    first_name = request.form.get("first_name")
    last_name = request.form.get("last_name")
    email = request.form.get("email")

    if not first_name or not last_name or not email:
        error_statment = "All form fields Requiered!"
        return render_template("fail.html", error_statment=error_statment, first_name=first_name, last_name=last_name, email=email)
        
    message = "You have beed subscribe to my email newslater"
    server = smtplib.SMTP("smtp.gmail.com", 587)
    server.starttls()
    server.login()
    server.sendmail("ivan.sijan@gmail.com",first_name,last_name,email,message)

    subscribers.append(f"{first_name} {last_name} || {email}")
    return render_template('form.html', first_name=first_name, last_name=last_name, email=email, subscribers=subscribers)


